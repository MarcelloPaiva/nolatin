---
import { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"input"> {}

const inputProps = Astro.props
---

<input
  {...inputProps}
  class={"bg-black w-full max-w-40 px-1 text-white focus:ring-2 focus:ring-success " +
    inputProps.class}
/>

<style>
  *:focus {
    outline: none;
  }
</style>
