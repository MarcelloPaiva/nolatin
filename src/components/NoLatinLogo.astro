---
import NoLatinLogoSvgDark from "../assets/nolatin-logo-onLight.svg?raw"
import NoLatinLogoSvgLight from "../assets/nolatin-logo-onDark.svg?raw"

interface Props {
  style: string
}

const { style } = Astro.props
---

<a
  href="/"
  set:html={NoLatinLogoSvgDark}
  class={`svg-inline block dark:hidden ${style}`}
/>
<a
  href="/"
  set:html={NoLatinLogoSvgLight}
  class={`svg-inline hidden dark:block ${style}`}
/>
